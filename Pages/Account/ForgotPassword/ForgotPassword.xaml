<Window x:Class="StrategySync.Pages.Account.ForgotPassword.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="350" Width="400">
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="200"/>
        </Style>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource PassBoxStyle}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="200"/>
        </Style>
        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle2}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Email Input Section -->
        <StackPanel x:Name="EmailSection" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="82*"/>
                    <ColumnDefinition Width="23*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Email:" Grid.Column="0" Style="{StaticResource TextBlockStyle1}" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="5,5,165,5"/>
                <TextBox x:Name="EmailTextBox" Grid.Column="1" VerticalAlignment="Center"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2" Margin="45,5,5,5" Style="{StaticResource TextBoxStyle}"/>
            </Grid>
            <Button Content="Send Email" Name="SendEmail"  Click="SendEmail_Click" Width="120" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Verification Code Section -->
        <StackPanel x:Name="VerificationSection" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Code:" Grid.Column="0" Style="{StaticResource TextBlockStyle1}" Margin="5,5"/>
                <TextBox x:Name="VerificationCodeTextBox" Grid.Column="1" 
                         Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
            <Button Content="Submit Code" Click="SubmitCode_Click" Width="120"/>
            <Button x:Name="ResendEmailButton" Content="Resend Email" Click="ResendEmail_Click" Width="120" IsEnabled="False"/>
            <TextBlock x:Name="ResendCountdownTextBlock" HorizontalAlignment="Center" Foreground="Gray" Style="{StaticResource TextBlockStyle1}"/>
        </StackPanel>

        <!-- Password Change Section -->
        <StackPanel x:Name="PasswordSection" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="New Password:" Grid.Row="0" Grid.Column="0" Style="{StaticResource TextBlockStyle2}"/>
                <PasswordBox x:Name="NewPasswordBox" Grid.Column="1"
                             PasswordChanged="NewPasswordBox_PasswordChanged"/>
                <TextBlock Text="Confirm Password:" Grid.Row="1" Grid.Column="0" Style="{StaticResource TextBlockStyle2}"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="1" Grid.Column="1"
             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
            </Grid>
            <Button Content="Change Password" Click="ChangePassword_Click" Width="150"/>
        </StackPanel>
    </Grid>
</Window>
